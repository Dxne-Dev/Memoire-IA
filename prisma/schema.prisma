generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin_settings {
  id    Int     @id @default(autoincrement())
  key   String  @unique(map: "key") @db.VarChar(128)
  value String? @db.Text
}

model documents {
  id              Int               @id @default(autoincrement())
  user_id         Int
  title           String            @db.VarChar(255)
  filename        String            @db.VarChar(255)
  mimetype        String?           @db.VarChar(128)
  size            Int?
  upload_date     DateTime          @db.DateTime(0)
  status          documents_status? @default(uploaded)
  analysis_result String?           @db.Text

  @@index([user_id], map: "idx_documents_user_id")
}

model history {
  id         Int      @id @default(autoincrement())
  user_id    Int
  action     String   @db.VarChar(255)
  details    String?  @db.Text
  created_at DateTime @db.DateTime(0)

  @@index([user_id], map: "idx_history_user_id")
}

model payments {
  id             Int              @id @default(autoincrement())
  user_id        Int
  amount         Decimal          @db.Decimal(10, 2)
  payment_date   DateTime         @db.DateTime(0)
  status         payments_status? @default(pending)
  payment_method String?          @db.VarChar(64)

  @@index([user_id], map: "idx_payments_user_id")
}

model questions {
  id            Int      @id @default(autoincrement())
  document_id   Int
  user_id       Int
  question_text String   @db.Text
  answer_text   String?  @db.Text
  created_at    DateTime @db.DateTime(0)

  @@index([document_id], map: "idx_questions_document_id")
  @@index([user_id], map: "idx_questions_user_id")
}

model subscriptions {
  id         Int                   @id @default(autoincrement())
  user_id    Int
  type       subscriptions_type?   @default(free)
  status     subscriptions_status? @default(inactive)
  start_date DateTime?             @db.DateTime(0)
  end_date   DateTime?             @db.DateTime(0)

  @@index([user_id], map: "user_id")
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique(map: "email")
  password_hash    String   @db.VarChar(255)
  name             String?  @db.VarChar(255)
  created_at       DateTime @db.DateTime(0)
  is_admin         Boolean  @default(false)
  theme_preference String?

  @@map("users")
}

enum subscriptions_type {
  free
  premium
}

enum subscriptions_status {
  active
  inactive
  cancelled
  expired
}

enum payments_status {
  pending
  completed
  failed
}

enum documents_status {
  uploaded
  analyzed
  error
}
